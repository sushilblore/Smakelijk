<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1"
    tools:context="com.android.sushil.smakelijk.foodmenu.Fragments.FoodDetailsFragment">

    <ImageView
        android:id="@+id/img_thumbnail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_species"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.6"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:background="#ff444444"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="2dp"
                android:textColor="#fff"
                android:textSize="30dp"
                android:text="@string/food_details_name" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="2dp"
                android:textColor="#fff"
                android:textSize="30dp"
                android:text="@string/hello_blank_fragment" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="2dp"
                android:textColor="#fff"
                android:textSize="30dp"
                android:text="@string/food_details_price" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="2dp"
                android:textColor="#fff"
                android:textSize="30dp"
                android:text="@string/hello_blank_fragment" />

            <TextView
                android:id="@+id/tv_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="2dp"
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="@string/food_details_currency" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
